
<%= render 'layouts/adminsection' %>
<%= link_to 'New Exam', new_exam_path ,:class=>"btn btn-default"%>
<h1>Listing Exams</h1>  

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.name %></td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Show', exam ,:class=>"btn btn-warning"%></td> 
          <% if exam.status? %>

        <td><a href="exams/<%=exam.id%>/close" onclick="if(confirm('Are you sure you want to Close  this exam?'))  return true;  else  return false;" class="btn btn-warning" >Close</a></td>
        <%else%>
         <td><a href="exams/<%=exam.id%>/close" onclick="if(confirm('Are you sure you want to Open  this exam?'))  return true;  else  return false;" class="btn btn-default" >Open</a></td>
        <%end%>
        <td><%= link_to 'Edit', edit_exam_path(exam),:class=>"btn btn-warning" %></td> 
        <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you Sure?' },:class=>"btn btn-warning" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br><br><br><br>


<%= will_paginate @exams, renderer: BootstrapPagination::Rails %>
<br>
<%= link_to 'Back', index_path ,:class=>"btn btn-warning btn-medium pull-left"%>