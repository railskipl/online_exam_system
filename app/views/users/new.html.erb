<%= form_for(@user) do |f| %>
<fieldset></br>
<h1><center>Registration Form</center></h1>
 <div>
  &nbsp;&nbsp;&nbsp;&nbsp;<%= f.label "FirstName" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.text_field :firstname %>
 </div></br>
 <div>
  &nbsp;&nbsp;&nbsp;&nbsp;<%= f.label "LastName" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.text_field :lastname %></div></br>
 <div>
  &nbsp;&nbsp;&nbsp;&nbsp;<%= f.label "Email" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.text_field :email %><br />
 </div></br>
 <div>
  &nbsp;&nbsp;&nbsp;&nbsp;<%= f.label "Date Of Birth" %> &nbsp;&nbsp;
  <%= f.text_field :dob %><br />
  </div></br>
<div>
  &nbsp;&nbsp;&nbsp;&nbsp;<%= f.label "Conatct No" %> &nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.text_field :contact %><br />
</div></br>
<div>
  &nbsp;&nbsp;&nbsp;&nbsp;<%= f.label "Address" %> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.text_area :address %><br />
 </div></br>

  <div>
  &nbsp;&nbsp;&nbsp;&nbsp;<%= f.select(:exam_id, Exam.all.collect {|p| [p.name, p.id ]}, { :include_blank => 'select test' }) %></div><br />

  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.submit "REGISTER" %>

<% end %>
